<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5"
    android:background="@color/purplish"
    android:orientation="vertical"
    >


        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center_vertical"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.373"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/text_exam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Mock Test"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="⦿ Enter the exam code to add question."
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="103dp"
        android:layout_marginTop="20dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:text="⦿ Add 20 question which is static."
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:text="⦿ After adding question send exam code to the student."
            android:textColor="@color/white"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/examcode"
            android:layout_width="285dp"
            android:layout_height="55dp"
            android:background="@drawable/rounded_border"
            android:hint="  Exam Code "
            android:textColorHint="#FFFFFF"
            android:textSize="30dp"
            android:layout_marginTop="130dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            />


        <!--
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="No. of Questions"
            android:entries="@array/Spinner_items"
            tools:ignore="MissingConstraints" />-->




    <Button
        android:id="@+id/mybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/aqua"
        android:onClick="run"
        android:text="Add"
        android:textSize="30dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="429dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:gravity="center"
        />



</LinearLayout>